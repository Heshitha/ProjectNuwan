
@{
    Layout = null;
}

<section class="content">
    <h2>Transfer Points</h2>

    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <form ng-submit="SaveTransaction()">
                    <div class="box-header with-border">
                        <h3 class="box-title">Transfer Points</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group has-feedback">
                            <label>Available Transferable Points</label>
                            <input type="text" class="form-control" ng-model="Points" name="points" required disabled>
                            <span class="form-control-feedback"><i class="fa fa-money"></i></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label>Reciever's Username</label>
                            <input type="text" class="form-control" placeholder="Enter Reciever's Username" ng-model="RecUserName" name="Username" required>
                            <span class="form-control-feedback"><i class="fa fa-user"></i></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label>Amount</label>
                            <input type="number" class="form-control" placeholder="Enter Amount" ng-model="Amount" name="Amount" required>
                            <span class="form-control-feedback"><i class="fa fa-exchange"></i></span>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-floppy-o"></i>
                            &nbsp;Submit
                        </button>
                    </div><!-- box-footer -->
                </form>
</div><!-- /.box -->
        </div>
    </div>
</section>

