
@{
    Layout = null;
}

<section class="content">
    <h2>E-Vouchers</h2>

    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <form ng-submit="GenerateEpins()">
                    <div class="box-header with-border">
                        <h3 class="box-title">Financial Transaction Form</h3>
                        <h3 class="pull-right box-title">Points: <span ng-bind="Points"></span></h3>                        
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">                                
                                <div class="form-group">
                                    <label>E-Pin Value</label>
                                    <select class="form-control" ng-model="EpinVal">
                                        <option value="0">-- Select Value --</option>
                                        <option value="120">120</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="txtTransKey">Transaction Key</label>
                                    <input type="password" class="form-control" id="txtTransKey" ng-model="TransactionKey" ng-controller="TransactionKeyController" ng-blur="CheckTranactionKey()" placeholder="Enter Transaction Key" required>
                                </div>
                                <div class="form-group">
                                    <label for="txtNoOfKeys">How Many Keys</label>
                                    <input type="text" class="form-control" id="txtNoOfKeys" ng-model="NoOfPins" placeholder="Enter Number of Keys" required>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-floppy-o"></i>
                            &nbsp;Create Pin
                        </button>
                    </div><!-- box-footer -->

                </form>
            </div><!-- /.box -->
        </div>
    </div>
</section>