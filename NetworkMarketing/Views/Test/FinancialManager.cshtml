
@{
    ViewBag.Title = "FinancialManager";
    Layout = "~/Views/Shared/_AdminLTELayout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <h2>Financial Mnanager</h2>

        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary">
                    <form ng-submit="saveUser()">
                        <div class="box-header with-border">
                            <h3 class="box-title">Financial Transaction Form</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Country</label>
                                        <select class="form-control">
                                            <option value="0">-- Select Country --</option>
                                            <option value="1">Srilanka.</option>
                                            <option value="2">India.</option>
                                            <option value="3">Caneda</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Type</label>
                                        <select class="form-control">
                                            <option value="0">-- Select Yype --</option>
                                            <option value="1">Western Union</option>
                                            <option value="2">Money Gram</option>
                                            <option value="3">Bank Transfer</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Bank</label>
                                        <select class="form-control">
                                            <option value="0">-- Select Bank --</option>
                                            <option value="1">Bank Of Ceylon</option>
                                            <option value="2">Sampath Bank</option>
                                            <option value="3">Commercial Bank</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Account Type</label>
                                        <select class="form-control">
                                            <option value="0">-- Select Type --</option>
                                            <option value="1">Saving</option>
                                            <option value="2">Current</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="txtAccountName">Account Name</label>
                                        <input type="text" class="form-control" id="txtAccountName" placeholder="Enter User Name">
                                    </div>
                                    <div class="form-group">
                                        <label for="txtAccountNumber">Account Number</label>
                                        <input type="text" class="form-control" id="txtAccountNumber" placeholder="Enter First Name" required>
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-floppy-o"></i>
                                &nbsp;Save Details
                            </button>
                        </div><!-- box-footer -->
                    </form>
                </div><!-- /.box -->
            </div>
        </div>
    </section>
</div>

