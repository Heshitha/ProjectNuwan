
@{
    Layout = null;
}

@{
    var id = Request.QueryString["SelectedID"];
}

    <section class="content">
        <h2>Bank Details</h2>

        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary" data-ng-controller="AdminController" data-ng-init="GetBankDetailsById(@(id))">
                    <form ng-submit="uploadProof(@(id))">
                        <div class="box-header with-border">
                            <h3 class="box-title"></h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="txtAMount">Amount</label>
                                        <input type="number" class="form-control" id="txtAMount" ng-model="Amount" placeholder="Enter Amount" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label>Type</label>
                                        <input type="text" class="form-control" id="txtNic" ng-model="TransferType" placeholder="Enter NIC" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label>Account Type</label>
                                        <input type="text" class="form-control" id="txtNic" ng-model="AccType" placeholder="Enter NIC" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label for="txtNic">NIC</label>
                                        <input type="text" class="form-control" id="txtNic" ng-model="Nic" placeholder="Enter NIC" disabled>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="txtBankName">Bank Name</label>
                                        <input type="text" class="form-control" id="txtAMount" ng-model="BankName" placeholder="Enter Bank Name" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label for="txtAccountName">Account Holder Name</label>
                                        <input type="text" class="form-control" id="txtAccountName" ng-model="AccountName" placeholder="Enter Account Holder Name" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label for="txtAccountNumber">Account Number</label>
                                        <input type="text" class="form-control" id="txtAccountNumber" ng-model="AccountNumber" placeholder="Enter Account Number" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label for="txtAddress">Address</label>
                                        <input type="text" class="form-control" id="txtAddress" ng-model="Address" placeholder="Enter Address" disabled>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group pull-right">
                                                    <img id="imgPreview" class="profile-user-img img-responsive profile-user-img-profilePage" src="{{ProofUrl}}" alt="Uploaded Image" hidden onerror="this.onerror = null; this.src = baseUrl + '/Uploads/ProfileImages/default-user.jpg'" />
                                                </div>
                                                <div class="form-group pull-right">
                                                    <label for="txtChooseFile">Choose Image</label>
                                                    <input type="file" id="txtChooseFile" accept="image/gif, image/jpeg, image/png" onchange="angular.element(this).scope().uploadPreviewImage(this)" required>
                                                </div>
                                            </div>
                                            <div class="col-md-12">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary pull-right">
                                <i class="fa fa-floppy-o"></i>
                                &nbsp;Upload
                            </button>
                        </div><!-- box-footer -->
                    </form>
                </div><!-- /.box -->
            </div>
        </div>
    </section>
