
@{
    Layout = null;
}

<section class="content">
    <h2>Transfer Points</h2>

    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Transfer Points</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group has-feedback">
                        <label>Available Transferable Points</label>
                        <input type="text" class="form-control" placeholder="0.00" name="Username" required disabled>
                        <span class="form-control-feedback"><i class="fa fa-money"></i></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" placeholder="Reciever's Username" name="Username" required>
                        <span class="form-control-feedback"><i class="fa fa-user"></i></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" placeholder="Amount" name="Amount" required>
                        <span class="form-control-feedback"><i class="fa fa-exchange"></i></span>
                    </div>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        &nbsp;Submit
                    </button>
                </div><!-- box-footer -->
            </div><!-- /.box -->
        </div>
    </div>
</section>

